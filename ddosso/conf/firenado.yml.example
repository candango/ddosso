app:
  component: ddosso
  data:
    sources:
        # Set here references from sources defined on data.sources
        - session
        - diaspora
  pythonpath: ..
  cookie_secret: "--a-secret--here--"
  xsrf_cookies: true
  port: 8016
  login:
    urls:
      - name: default
        value: login
      - name: google
        value: {ddosso_root}/google/oauth2callback

data:
  sources:
    - name: session
      connector: redis
    - name: diaspora
      connector: sqlalchemy
      url: postgresql+psycopg2://diaspora:diasporapass@localhost:5432/diaspora
      # host: localhost
      # port: 6379
      # db: 0

components:
  - id: ddosso
    class: ddosso.app.DDOSSOComponent
    enabled: true
  - id: discourse
    class: ddosso.components.DiscourseComponent
    enabled: true
  - id: google
    class: ddosso.components.GoogleComponent
    enabled: true
  - id: static_maps
    enabled: true
  #- id: admin
  #  enabled: true
  #- id: info
  #  enabled: true

log:
  level: INFO

# Session types could be:
# file or redis.
session:
  type: redis
  enabled: true
  # Redis session handler configuration
  data:
    source: session
  # File session handler related configuration
  # path: /tmp
